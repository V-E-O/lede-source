. /lib/functions.sh

START=95
USE_PROCD=1
#PROCD_DEBUG=1

CONF=/etc/fuckshadows.json

ENABLED=0
config_load "fuckshadows"

parse_fuckshadows() {
	config_get ENABLED "$section" "enabled"
}
config_foreach parse_fuckshadows 'fuckshadows'

start_service() {
	if [ "1" = "$ENABLED" ] || [ "on" = "$ENABLED" ] || [ "true" = "$ENABLED" ]; then
		procd_open_instance
		procd_set_param command /usr/bin/fs-local -c $CONF -b 0.0.0.0 -u --fast-open
		procd_set_param file $CONF
		procd_set_param stdout 1
		procd_set_param stderr 1
		procd_close_instance
		procd_open_instance
		procd_set_param command /usr/bin/fs-tunnel -c $CONF -b 0.0.0.0 -l 5353 -L 8.8.8.8:53 -u
		procd_set_param file $CONF
		procd_set_param stdout 1
		procd_set_param stderr 1
		procd_close_instance
	else
		echo "fuckshadows is disabled!"
	fi
}

reload_service() {
	stop
	sleep 5s
	start
}
